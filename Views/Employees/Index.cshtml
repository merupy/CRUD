@model IEnumerable<CRUD.Models.Employee>

<h2>Employees</h2>
<a class="btn btn-primary" asp-controller="Employees" asp-action="EmployeeForm" role="button">Add</a>

<div class="col-md-9">
    <table id="MyDataTable" class="display">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Employee Code</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        @employee.Person.FirstName @employee.Person.MiddleName @employee.Person.LastName
                    </td>

                    <td>
                        @employee.Person.Email
                    </td>

                    <td>
                        @employee.EmployeeCode
                    </td>

                    <td>
                        <a asp-controller="Employees" asp-action="Update" asp-route-Id="@employee.EmployeeId"> Update</a> | 
                        <a asp-controller="Employees" asp-action="Delete" asp-route-Id="@employee.EmployeeId"> Delete</a> |
                        <a asp-controller="EmployeesJobHistory" asp-action="Index" asp-route-Id="@employee.EmployeeId">History</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="//cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" />

@section Scripts{
    <script src="//cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#MyDataTable').DataTable();
        });
    </script>
}


